<table class="table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Instance</th>
      <th>Surface m<sup>2</sup></th>
    </tr>
  </thead>
  <tbody>
    {{^data}}<tr><th class="group-header" colspan="3">No input data</th></tr>{{/data}}
    {{#data}}
    <tr>
      <th class="group-header" colspan="3">
        Apt: <span class="highlight">{{stairway}} / {{apt}}</span>
        Floor: <span class="highlight">{{floor}}</span>
        Unit: <span class="highlight">{{unit}}</span>
        {{#summary}}
        Surface: <span class="highlight">{{surface}} m<sup>2</sup></span>
        Rooms: <span class="highlight">{{rooms}}</span>
        Rooms surface: <span class="highlight">{{roomsSurface}} m<sup>2</sup></span>
        Type: <span class="highlight">{{type}}</span>
        {{/summary}}
      </th>
    </tr>
    {{#content}}
    <tr>
      <td>{{room}}</td>
      <td>{{instance}}</td>
      <td>{{surface}}</td>
    </tr>
    {{/content}}
    {{/data}}
  </tbody>
</table>
