<table class="table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Instance</th>
      <th>Surface m<sup>2</sup></th>
    </tr>
  </thead>
  <tbody>
    {{^data}}<tr><th class="group-header" colspan="3">No input data</th></tr>{{/data}}
    {{#data}}
    <tr>
      <th class="group-header" colspan="3">
        Top: <span class="highlight">{{stairway}} / {{apt}}</span>
        Geschoss: <span class="highlight">{{floor}}</span>
        {{#summary}}
        Typ: <span class="highlight">{{unit}}</span>
        Smart: <span class="highlight">{{type}}</span>
        Zimmer: <span class="highlight">{{rooms}}</span>
        WN Fl√§che: <span class="highlight">{{roomsSurface}} m<sup>2</sup></span>
        {{/summary}}
      </th>
    </tr>
    {{#content}}
    <tr>
      <td>{{room}}</td>
      <td>{{instance}}</td>
      <td>{{surface}}</td>
    </tr>
    {{/content}}
    {{/data}}
  </tbody>
</table>
